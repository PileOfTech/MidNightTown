.modal-back
  .close
  .modal
    img.bigimage#img
    .background
      .arrow-side.left
        .arrow
          = image_tag("chevron.svg")
      .arrow-side.right
        .arrow
          = image_tag("chevron.svg")
      .info.watches
        .count alt="" {{watches}}
        .eye
      .info.date ng-model="date" {{date | date:'dd MMMM yyyy hh:mm':'UTC'}}
.image-container.not-scrolling
  .images
    div ng-repeat="image in ctrl.images"
      .image id="{{$index}}" ng-click="modal($index)"
        img src="{{image.image.url}}" 

    -if user_signed_in?
      .image.add ng-click="modal()"
        .modal-click
          .plus
            =image_tag "plus.png"
